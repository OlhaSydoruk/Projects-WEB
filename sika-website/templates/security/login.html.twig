{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div>
        <h2 class="heading">Authentication</h2>
    </div>
    <div  class="container-fluid ">
        <div class="row justify-content-center  bg-primary " >
            <div class="col-md-5 col-lg-6 card  text-center" >
                <div>
                    <div class="card-image-container">
                        <img  src="{{ asset('build/images/Sika_NoClaim.png') }}"   alt="SIKA">
                    </div>

                    <div class="card-form-title">
                        <h1  class="text-center mb-0"> Please sign in</h1>
                    </div>
                    <form action="{{ path("app_login") }}" method="post" class="text-center form" >
                        <div class="form-group p-2"  >

                            <div class="form-text-field">
                                <input type="email" value="{{ last_username }}" name="_username" id="inputEmail"  class="form-text-field-key-input form-text-field_inp" autocomplete="email" required autofocus>
                                <label for="inputEmail" class="form-text-field_placeholder">Email</label>
                            </div>

                            <div class="form-text-field">
                                <input type="password" name="_password" id="inputPassword" class="form-text-field-key-input form-text-field_inp" autocomplete="current-password" required>
                                <label for="inputPassword" class="form-text-field_placeholder">Password</label>
                            </div>


                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >

                            <input type="hidden" name="_target_path" value="{{ path("info") }}">

                        </div>
                        <div class="form-group p-2" >
                            <input type="submit" class="btn btn-primary w-100 rounded-0 shadow" value=" Sign in ">
                        </div>


                        <h6 class=" pb-t">don't have an account ? </h6>

                        <a href="{{ path('app_register') }}"  type="submit">
                            Registration
                        </a>
                    </form>
                </div>

            </div>
        </div>
    </div>

{% endblock %}
