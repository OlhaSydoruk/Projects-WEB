{% extends 'base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}

<div class="error">
    {{ form_errors(registrationForm) }}
</div>




    <div>
        <h2 class="heading">Registration </h2>
    </div>
    <div  class="container-fluid ">
        <div class="row justify-content-center  bg-primary " >
            <div class="col-md-5 col-lg-6 card  text-center" >
                <div>
                    <div class="card-image-container">
                        <img  src="{{ asset('build/images/Sika_NoClaim.png') }}"   alt="SIKA">
                    </div>
                    <div class="card-form-title">
                        <h1  class="text-center"> Registration</h1>

                    </div>

                    {{ form_start(registrationForm, {'attr': {'class': 'text-center form'}}) }}

                        <div class="form-group p-2"  >
                            <div class="form-text-field">
                                {{ form_widget(registrationForm.name, {'attr': {'class': 'form-text-field-key-input form-text-field_inp'}}) }}
                                {{ form_label(registrationForm.name, 'name', {'label_attr': {'class': 'form-text-field_placeholder'}}) }}
                                {{ form_errors(registrationForm.name, {'attr': {'class': 'error-message' }} )}}
                            </div>
                        </div>

                        <div class="form-group p-2"  >
                            <div class="form-text-field">
                                {{ form_widget(registrationForm.surname, {'attr': {'class': 'form-text-field-key-input form-text-field_inp'}}) }}
                                {{ form_label(registrationForm.surname, 'surname', {'label_attr': {'class': 'form-text-field_placeholder'}}) }}
                                {{ form_errors(registrationForm.surname, {'attr': {'class': 'error-message' }}) }}
                            </div>
                        </div>

                        <div class="form-group p-2"  >
                            <div class="form-text-field">
                                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-text-field-key-input form-text-field_inp', }}) }}
                                {{ form_label(registrationForm.email, 'email', {'label_attr': {'class': 'form-text-field_placeholder'}}) }}
                                {{ form_errors(registrationForm.email, {'attr': {'class': 'error-message' }})}}
                            </div>
                        </div>

                        <div class="form-group p-2">
                            <div class="form-text-field">
                                <div class="form-text-field">
                                    {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-text-field-key-input form-text-field_inp'}}) }}
                                    {{ form_label(registrationForm.plainPassword.first, 'Password', {'label_attr': {'class': 'form-text-field_placeholder'}}) }}
                                    {{ form_errors(registrationForm.plainPassword.first,    {'attr': {'class': 'error-message' }} ) }}

                                </div>
                                <div class="form-text-field">
                                    {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-text-field-key-input form-text-field_inp'}}) }}
                                    {{ form_label(registrationForm.plainPassword.second, 'Repeat Password', {'label_attr': {'class': 'form-text-field_placeholder'}}) }}
                                    {{ form_errors(registrationForm.plainPassword.second ,{'attr': {'class': 'error-message' }} )}}
                                </div>
                            </div>

                        </div>

                        <div class="form-group p-2"  >
                            <div class="form-text-field text-start">
                                {{ form_widget(registrationForm.agreeTerms) }}
                                {{ form_label(registrationForm.agreeTerms, 'I agree', {'label_attr': {'class': 'font-light'}}) }}
                                {{ form_errors(registrationForm.agreeTerms, {'attr': {'class': 'error-message' }}) }}
                            </div>
                        </div>

                        <div class="form-group p-2"  >
                            <div class="form-text-field">
                                {{ form_widget(registrationForm.comments, {'attr': {'class': 'form-text-field-key-input form-text-field_inp'}}) }}
                                {{ form_label(registrationForm.comments, 'some comments', {'label_attr': {'class': 'form-text-field_placeholder'}}) }}
                                {{ form_errors(registrationForm.comments, {'attr': {'class': 'error-message'}}) }}
                            </div>
                        </div>

                        <div class="form-group p-2" >
                            <button type="submit" class="btn btn-primary w-100 rounded-0 shadow">Registration</button>
                        </div>


  {{ form_end(registrationForm) }}

                </div>

            </div>
        </div>
    </div>





{% endblock %}
